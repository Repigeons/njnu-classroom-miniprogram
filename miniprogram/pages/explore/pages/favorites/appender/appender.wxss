/* pages/explore/pages/favorites/appender/appender.wxss */
.body {
  margin: 10px;
  padding-bottom: 15px;
}

input {
  background-color: #fff;
  margin-top: 5px;
}

.time-picker {
  background-color: #fff;
  padding: 3px 10px;
}

.field {
  padding-bottom: 10px;
}

.remark {
  padding: 0 5px;
  margin: 3px 0;
  display: inline-block;
  height: 34px;
}

.remark-field {
  display: inline-block;
  width: 25%;
  margin: 5px 2px;
}

.remark-value {
  display: inline-block;
  width: 50%;
  margin: 5px 2px;
}

.remark-delete {
  display: inline;
  margin: 5px 2px;
  position: relative;
  bottom: 10px;
  right: 0;
  padding: 5px 12px;
  background-color: #ccc;
}

.colorBlock {
  width: 700rpx;
  display: inline-block;
  margin: calc(50rpx - 20px);
}

.colorBlock>view {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
}
