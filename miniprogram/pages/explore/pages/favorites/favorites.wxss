/* pages/explore/pages/favorites/favorites.wxss */
.rp-header {
  margin: 8px 8px 0 8px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 40px;
  background-color: #ffffff;
  border-radius: 16px;
}

.rp-header>text {
  width: 100%;
  text-align: center;
}
.rp-header>navigator{
  position: absolute;
  text-align: center;
  width: 60px;
  right: 40px;
  height: 40px;
  font-size: 35px;
  background-color: #fee;
}

.rp-bd_text {
  position: relative;
  display: inline;
  margin: 0 6px;
  line-height: 16px;
  font-weight: 700;
}

.rp-outerborder {
  position: absolute;
  border-radius: 16px;
  background-color:#ffffff;
  z-index: -1;
  overflow: hidden;
  border: 1px solid #ffffff;
}

.rp-outerborder .title {
  position: absolute;
  background-color:#e5e5e5;
  margin-bottom: 1px;
  margin-right: 1px;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.rp-outerborder .title .image {
  height: 20px;
  width: 20px;
}

.rp-outerborder .title .jc{
  position:absolute;
  font-weight:600;
  color:#000
}

.rp-outerborder .title .time{
  position:absolute;
  letter-spacing:1;
  color:#535353;
}

.rp-outerborder .title .xq{
  font-weight:600;
  color:#000
}

.rp-outerborder .highlight_cell {
  background-color: #b8ced9;
  background-color: #c9c9c9;
}

.rp-data{
  position:absolute;
  background-color: #e5e5e5;
  z-index: 1
}

.rp-data>.bar {
  position: absolute;
  transition: height .6s, top .6s, background-color .6s;
  border-radius: 8px;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  word-break:break-all;
  color: #000000;
  border: 1px solid #ffffff;
}

.rp-data>.bar-active {
  background-color: #cee6f2;
  opacity: .8;
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .rp-search-bar {
    background-color: #191919;
  }

  .rp-label .image {
    filter: invert(0.6);
  }

  .rp-outerborder {
    background-color:#000000;
    border: 1px solid #000000;
  }
  
  .rp-outerborder .title {
    background-color:#191919;
  }

  .rp-outerborder .title .jc{
    color:#ffffff77
  }
  
  .rp-outerborder .title .xq{
    color:#ffffff88
  }
  
  .rp-outerborder .highlight_cell {
    background-color: #ffffff77;
  }
  
  .rp-data{
    background-color: #1e1e1e;
  }
  
  .rp-data .bar {
    color: #000000;
    border: 1px solid #000000;
  }
  
  .rp-data .empty {
    background-color:#80A780;
  }
  
  .rp-data .class {
    background-color:#7393AD;
  }

  .dialog-text {
    color: #ffffff77;
  }
  /* DarkMode 下的样式 end */
}
